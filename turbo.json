{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT", "NODE_ENV", "BASE_URL", "CI"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format:check": {},
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
