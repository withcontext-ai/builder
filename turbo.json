{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "PORT",
    "NODE_ENV",
    "BASE_URL",
    "CI",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "GCP_STORAGE_BUCKET_NAME"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format:check": {},
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "lint": {},
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "test": {},
    "test:e2e": {}
  }
}
