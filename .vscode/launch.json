{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--reload"],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}/apps/api"
    },
    {
      "name": "Python: test workflow",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-vv", "-s", "tests/test_workflow.py"],
      "cwd": "${workspaceFolder}/apps/api"
    }
  ]
}
